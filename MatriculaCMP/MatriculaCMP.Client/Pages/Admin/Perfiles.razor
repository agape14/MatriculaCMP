@page "/admin/perfiles"
@using MatriculaCMP.Shared
@using System.Text.Json;
@inject HttpClient Http
@inject NavigationManager Nav
@inject IJSRuntime JS

@switch (estado)
{
    case Estado.Cargando:
        <em>Cargando…</em>
        break;

    case Estado.Error:
        <div class="alert alert-danger">
            <strong>Error:</strong> @mensajeError
        </div>
        break;

    case Estado.Listo:
        <div class="container-fluid">
            <!-- start page title -->
            <div class="row">
                <div class="col-12">
                    <div class="page-title-box d-sm-flex align-items-center justify-content-between">
                        <h4 class="mb-sm-0">Perfiles</h4>

                        <div class="page-title-right">
                            <ol class="breadcrumb m-0">
                                <li class="breadcrumb-item"><a href="javascript: void(0);">Inicio</a></li>
                                <li class="breadcrumb-item active">Perfiles</li>
                            </ol>
                        </div>

                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-body  pt-0">
                            <div class="col-sm-12">
                                <table id="tblListadoUsuarios" class="table table-centered datatable dt-responsive nowrap dataTable no-footer dtr-inline ml-2 w-100">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Nombre</th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var (p, idx) in perfiles!.Select((value, index) => (value, index)))
                                        {
                                            <tr>
                                                <td>@(idx + 1)</td>
                                                <td>@p.Nombre</td>
                                                <td class="text-end">
                                                    <button class="btn btn-sm btn-secondary"
                                                            @onclick="() => Editar(p.Id)">
                                                        <i class="ri-edit-2-line"></i> Editar
                                                    </button>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        break;
}

@code {
    enum Estado { Cargando, Listo, Error }

    List<Perfil>? perfiles;
    Estado estado = Estado.Cargando;
    string? mensajeError;

    protected override async Task OnInitializedAsync()
    {
        await CargarDatos();
    }

    async Task CargarDatos()
    {
        estado = Estado.Cargando;
        try
        {
            perfiles = await Http.GetFromJsonAsync<List<Perfil>>("/api/perfiles");
            estado = Estado.Listo;
        }
        catch (Exception ex)
        {
            mensajeError = ex.Message;
            estado = Estado.Error;
        }
    }

    void Editar(int id) => Nav.NavigateTo($"/admin/perfiles/{id}");
}