                            <h6 class="card-title text-@(item.colortexto ?? "dark")">@item.titulo</h6>
                            <h3 class="fw-bold text-@(item.colortexto ?? "dark")">@item.valor</h3>
                        </div>
                        <i class="@item.icono text-@(item.colortexto ?? "dark") display-4 opacity-50"></i>
