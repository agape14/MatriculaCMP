    }

    private void VerPdf(string ruta, string nombre)
    {
        pdfUrl = $"/api/personaseducacion/documentos-educacion/{ruta}";
        mostrarVisorPdf = true;
        nombrePDF = nombre;
    }

    private void CerrarVisorPdf()
    {
        pdfUrl = null;
        mostrarVisorPdf = false;
        nombrePDF = "";
    }
}

