        window.inicializarDataTable = (tableId) => {
            const selector = tableId;
            if ($.fn.DataTable.isDataTable(selector)) {
                $(selector).DataTable().clear().destroy();
            }
            setTimeout(() => {
                $(selector).DataTable({
                    responsive: true,
                    destroy: true,
                    autoWidth: false,
                    language: {
                        url: '//cdn.datatables.net/plug-ins/1.13.4/i18n/es-ES.json'
                    }
                });
            }, 100);
        };

        // Prematrícula: persistir paso 4 y políticas/DDJJ (site.js no se carga en todas las vistas)
        window.premaSetPaso4 = function(solicitudId) { try { localStorage.setItem('prematricula_paso4_' + solicitudId, '1'); } catch (e) {} };
        window.premaGetPaso4 = function(solicitudId) { try { return localStorage.getItem('prematricula_paso4_' + solicitudId) || ''; } catch (e) { return ''; } };
        window.premaClearPaso4 = function(solicitudId) { try { localStorage.removeItem('prematricula_paso4_' + solicitudId); } catch (e) {} };
