        window.premaClearPoliticasDDJJ = function(solicitudId) { try { localStorage.removeItem('prematricula_politicas_ddjj_' + solicitudId); } catch (e) {} };
        window.premaAbrirPasarelaPost = function(url, postParams) {
            try {
                var form = document.createElement('form');
                form.method = 'POST';
                form.action = url || '';
                form.target = '_blank';
                if (postParams && typeof postParams === 'object') {
                    for (var k in postParams) { if (postParams.hasOwnProperty(k)) {
                        var i = document.createElement('input'); i.type = 'hidden'; i.name = k; i.value = postParams[k] || ''; form.appendChild(i);
                    }}
                }
                document.body.appendChild(form);
                form.submit();
                document.body.removeChild(form);
            } catch (e) { console.error('premaAbrirPasarelaPost', e); }
        };
