        window.solicitarObservacion = async function () {
            const { value: text } = await Swal.fire({
                title: '¿Estás seguro de observar?',
                input: 'text',
                inputLabel: 'Motivo de la observación',
                inputPlaceholder: 'Ingrese una observación',
                inputValidator: (value) => {
                    if (!value || value.trim() === "") {
                        return 'Debe ingresar una observación';
                    }
                    return null;
                },
                showCancelButton: true,
                confirmButtonText: 'Sí, Observar',
                cancelButtonText: 'Salir'
            });

            return text || null;
        }

        // Funciones para Select2 de universidades extranjeras
        window.initSelect2UniversidadesExtranjeras = (elementId) => {
            try {
                const selector = '#' + elementId;
                const element = $(selector);

                console.log('Intentando inicializar Select2 para:', elementId, 'Elemento encontrado:', element.length > 0);

                if (element.length === 0) {
                    console.warn('Elemento no encontrado:', elementId);
                    return false;
                }
                
                // Destruir Select2 si ya existe
                if (element.data('select2')) {
                    element.select2('destroy');
                    element.off('change.select2');
                }
                
                // Inicializar Select2
                element.select2({
                    placeholder: 'Seleccione o escriba para buscar...',
                    allowClear: true,
                    width: '100%',
                    dropdownAutoWidth: true,
                    language: {
                        noResults: function() {
                            return 'No se encontraron resultados';
                        },
                        searching: function() {
                            return 'Buscando...';
                        }
                    }
                });

                // Manejar el evento de cambio para Blazor (con protección contra bucle infinito)
                element.on('change.select2', function (e) {
                    // Evitar bucle infinito
                    if (this._processingChange) return;
                    this._processingChange = true;
                    
                    var selectedValue = $(this).val();
                    console.log('Select2 cambió a:', selectedValue);
                    
                    // Disparar el evento change nativo para que Blazor lo detecte
                    var nativeEvent = new Event('change', { bubbles: true });
                    this.dispatchEvent(nativeEvent);
                    
                    // Resetear la bandera después de un pequeño delay
                    var self = this;
                    setTimeout(function() {
                        self._processingChange = false;
                    }, 100);
                });

                console.log('Select2 inicializado correctamente para:', elementId, 'Options:', element.find('option').length);
                return true;
            } catch (error) {
                console.error('Error al inicializar Select2 para', elementId, ':', error);
                return false;
            }
        };

        // Función para obtener el valor seleccionado del Select2
        window.getSelect2Value = (elementId) => {
            const selector = '#' + elementId;
            const element = $(selector);
            if (element.length > 0 && element.data('select2')) {
                return element.val();
            }
            return null;
        };

        // Función para destruir Select2
        window.destroySelect2 = (elementId) => {
            try {
                const selector = '#' + elementId;
                const element = $(selector);
                if (element.length > 0 && element.data('select2')) {
                    element.select2('destroy');
                    element.off('change.select2');
                    console.log('Select2 destruido para:', elementId);
                }
            } catch (error) {
                console.error('Error al destruir Select2:', error);
            }
        };

        // Función para inicializar Select2 en el campo de País (para universidad extranjera)
        window.initSelect2Pais = (elementId) => {
            try {
                const selector = '#' + elementId;
                const element = $(selector);

                if (element.length === 0) {
                    console.warn('Elemento país no encontrado:', elementId);
                    return false;
                }
                
                // Destruir Select2 si ya existe
                if (element.data('select2')) {
                    element.select2('destroy');
                    element.off('change.select2');
                }
                
                // Inicializar Select2
                element.select2({
                    placeholder: 'Buscar país...',
                    allowClear: true,
                    width: '100%',
                    language: {
                        noResults: function() {
                            return 'No se encontraron países';
                        },
                        searching: function() {
                            return 'Buscando...';
                        }
                    }
                });

                // Manejar el evento de cambio para Blazor
                element.on('change.select2', function (e) {
                    if (this._processingChange) return;
                    this._processingChange = true;
                    
                    var selectedValue = $(this).val();
                    console.log('País Select2 cambió a:', selectedValue);
                    
                    var nativeEvent = new Event('change', { bubbles: true });
                    this.dispatchEvent(nativeEvent);
                    
                    var self = this;
                    setTimeout(function() {
                        self._processingChange = false;
                    }, 100);
                });

                console.log('Select2 País inicializado para:', elementId);
                return true;
            } catch (error) {
                console.error('Error al inicializar Select2 País:', error);
                return false;
            }
        };

        // Funciones de modal y confirmación
        window.confirmarSweet = async function (titulo, texto) {
