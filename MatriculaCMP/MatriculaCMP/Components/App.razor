    <script>
        window.select2interop = {
            init: function (selector) {
                $(selector).select2({ width: '100%' });
            },
            destroy: function (selector) {
                $(selector).select2('destroy');
            },
            refresh: function (selector) {
                this.destroy(selector);
                this.init(selector);
            }
        };

        function mostrarSpinnerLogin(titulo) {
            Swal.fire({
                title: titulo,
                text: "Por favor espere.",
                allowOutsideClick: false,
                allowEscapeKey: false,
                showConfirmButton: false,
                didOpen: () => {
                    Swal.showLoading();
                }
            });
        }

        window.solicitarObservacion = async function () {
            const { value: text } = await Swal.fire({
                title: '¿Estás seguro de observar?',
                input: 'text',
                inputLabel: 'Motivo de la observación',
                inputPlaceholder: 'Ingrese una observación',
                inputValidator: (value) => {
                    if (!value || value.trim() === "") {
                        return 'Debe ingresar una observación';
                    }
                    return null;
                },
                showCancelButton: true,
                confirmButtonText: 'Sí, Observar',
                cancelButtonText: 'Salir'
            });

            return text || null;
        }


    </script>

